.row
  .col-sm-12
    %h4
      %a{href: url_for('/nodes')} nodes
      %span /
      =@data[:name]
      &nbsp;
      %a{title: 'configuration', href: url_for("/node/fetch/#{@data[:full_name]}")}
        %i.fas.fa-file-download{style: 'color: #000; font-size: 14px;'}
      %a{title: 'versions',
         href: url_for("/node/version?node_full=#{@data[:full_name]}")}
        %i.fas.fa-history{style: 'color: #000; font-size: 14px;'}
      %a{title: 'update', href: url_for("/node/next/#{@data[:full_name]}")}
        %i.fas.fa-spinner{style: 'color: #000; font-size: 14px;'}
    - out = '';PP.pp(@data,out)
    %pre
      = preserve "#{out}"

